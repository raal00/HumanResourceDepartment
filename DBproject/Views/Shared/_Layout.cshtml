<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DBproject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark sticky-top">
            <ul class="navbar-nav">
                <li>
                    <a class="navbar-brand" href="~/icon.png">
                        <img src="~/icon.png" alt="" style="width:60px;height:60px;">
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Index">Отдел кадров</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Staff/Hiring">Учет сотрудников</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Order/OrderPanel">Оформление приказов</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/ReportCard/ReportCardPanel">Табель</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - отдел кадров MAI - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
